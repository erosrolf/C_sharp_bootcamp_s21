<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="rush00.App.Views.NewHabbitView">
    <StackPanel>
        
        <StackPanel Margin="10, 5">
            <TextBlock Margin="0, 5"
                       Text="Set a habit to track:" />
            <TextBox AcceptsReturn="True" />
        </StackPanel>
        
        <StackPanel Margin="10, 5">
            <TextBlock Margin="0, 5"
                       Text="What would be a motivation:" />
            <TextBox AcceptsReturn="True" />
        </StackPanel>
        
        <StackPanel Margin="10, 5">
            <TextBlock Margin="0, 5"
                       Text="When will you start:" />
            <DatePicker />
        </StackPanel>
        
        <StackPanel Margin="10, 5">
            <TextBlock Margin="0, 5"
                       Text="How many days you want to challenge yourself for:" />
            <NumericUpDown Value="0"
                           Minimum="0"
                           Maximum="100"
                           FormatString="0" />
        </StackPanel>
        
        <Button Margin="10, 15" Content="Let's start!" />
        
    </StackPanel>
</UserControl>
