<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="450"
        x:Class="Team00.MainWindow"
        Title="Set new habit to track">

    <Window.Styles>
        <StyleInclude Source="MainWindowStyles.axaml" />
    </Window.Styles>

    <StackPanel Classes="WrapperL1">
        <StackPanel Classes="WrapperL2">
            <Label Content="Set a habit to track:" />
            <TextBox Margin="4" />
        </StackPanel>

        <StackPanel Classes="WrapperL2">
            <Label Content="What would be a motivaliton:" />
            <TextBox Margin="4" />
        </StackPanel>

        <StackPanel Classes="WrapperL2">
            <Label Content="When will you start:" />
            <DatePicker DayFormat="dd" Margin="4" />
        </StackPanel>

        <StackPanel Classes="WrapperL2">
            <Label Content="How many days you want to challenge yourself for:" />
            <NumericUpDown Margin="4" FormatString="0" Minimum="0" Maximum="100" Value="0" />
        </StackPanel>

        <Button Margin="4" Content="Let's start!" />
    </StackPanel>
</Window>